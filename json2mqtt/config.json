{
  "name": "Json2MQTT",
  "version": "2021041201",
  "slug": "json2mqtt",
  "description": "Send data from json apis to MQTT",
  "url": "https://github.com/fliphess/json2mqtt",
  "arch": [
      "aarch64",
      "amd64",
      "armhf",
      "armv7",
      "i386"
  ],
  "startup": "services",
  "boot": "auto",
  "services": ["mqtt:need"],
  "host_network": false,
  "hassio_role": "default",
  "hassio_api": false,
  "map": ["ssl", "share:rw"],
  "options": {
    "schema_dir": "/share/json2mqtt/schemas",
    "toon_host": "toon.local",
    "mqtt_autoconfig": true,
    "mqtt": {
      "username": "some",
      "password": "pass",
      "host": "a.b.c.d",
      "port": 1883,
      "prefix": "home/json2mqtt",
      "ssl": false,
      "ssl_cert": "/etc/ssl/cert.pem"
    },
    "verbosity": "info"
  },
  "schema": {
    "schema_dir": "str",
    "toon_host": "str",
    "mqtt_autoconfig": "bool",
    "mqtt": {
      "username": "str?",
      "password": "str?",
      "host": "str?",
      "port": "int?",
      "prefix": "str",
      "ssl": "bool",
      "ssl_cert": "str"
    },
    "verbosity": "list(info|debug|error)"
  },
  "image": "flapperdeflipper/addon-json2mqtt"
}
