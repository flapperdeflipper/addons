{
  "name": "Mosquitto broker",
  "version": "2021.01.01",
  "slug": "mosquitto",
  "description": "An Open Source MQTT broker with a MySQL authentication backend",
  "url": "https://github.com/fliphess/home-assistant-addons/tree/master/mosquitto",
  "arch": [
      "amd64"
  ],
  "startup": "system",
  "boot": "auto",
  "map": ["ssl", "share"],
  "advanced": true,
  "hassio_role": "default",
  "hassio_api": true,
  "discovery": ["mqtt"],
  "services": [
      "mqtt:provide",
      "mysql:need"
  ],
  "ports": {
    "1883/tcp": 1883,
    "1884/tcp": 1884,
    "8883/tcp": 8883,
    "8884/tcp": 8884
  },
  "options": {
    "admin_password": "someverysecretthing",

    "anonymous": false,
    "customize": {
      "active": false,
      "folder": "mosquitto"
    },
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "require_certificate": false
  },
  "schema": {
    "admin_password": "str",
    "anonymous": "bool",
    "customize": {
      "active": "bool",
      "folder": "str"
    },
    "cafile": "str?",
    "certfile": "str",
    "keyfile": "str",
    "require_certificate": "bool"
  },
  "image": "flapperdeflipper/addon-mosquitto"
}
