{
  "name": "Unifi2MQTT",
  "version": "2021.01.02",
  "slug": "unifi2mqtt",
  "description": "Connecting your unifi controler to mqtt",
  "url": "https://github.com/fliphess/addon-unifi2mqtt",
  "arch": ["amd64"],
  "startup": "application",
  "boot": "auto",
  "services": ["mqtt:need"],
  "host_network": false,
  "hassio_role": "default",
  "hassio_api": false,
  "advanced": true,
  "options": {
    "mqtt_autoconfig": true,
    "mqtt": {
      "username": "some",
      "password": "pass",
      "host": "a.b.c.d",
      "port": 1883,
      "prefix": "home/unifi2mqtt"
    },
    "unifi_host": "127.0.0.1",
    "unifi_port": 8443,
    "unifi_user": "admin",
    "unifi_pass": "",
    "unifi_site": "default",
    "insecure": true,
    "verbosity": "info"
  },
  "schema": {
    "mqtt_autoconfig": "bool",
    "mqtt": {
      "username": "str?",
      "password": "str?",
      "host": "str?",
      "port": "int?",
      "prefix": "str?"
    },
    "unifi_host": "str",
    "unifi_port": "int",
    "unifi_user": "str",
    "unifi_pass": "str",
    "unifi_site": "str",
    "insecure": "bool",
    "verbosity": "list(error|warn|info|debug|info)"
  },
  "image": "flapperdeflipper/addon-unifi2mqtt"
}
